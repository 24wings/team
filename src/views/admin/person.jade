extends layouts/base-layout
block append style
    style.
        .img-responsive{
                width:100%;
        }

block append content
    h1.text-center 个人空间
    .container
        .row
                    //- 左侧个人信息,右侧
        .col-md-4.col-sm-12
            .thumbnail
                img.avatar(src='data:image/svg+xml;base64,').img-responsive
                .caption
                    h3  个人简介: #{developer.name?developer.name:'默认名字'}
                    span.glyphicon.glyphicon-star
                    p 
                        if developer.summary
                            | #{developer.summary}
                        else
                            |  未填写简述,快去填写吧
                    .row.text-center
                        .btn.btn-default 完善个人信息

                        

        