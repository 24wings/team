extends layouts/base-layout
block append content
    if errorMsg
        h2.text-center.alert.alert-danger #{errorMsg} 
    else
        h2
    .container  
        .row
            h2.text-center  注册开发者账号
        .row 
            .col-md-6.col-md-offset-3 
                form(action='/admin/signup',method='POST')
                  .form-group
                    label  手机号  
                    input(type="text",name='phone',required='required').form-control#phone
                  .form-group  
                    label 密码 
                    input(type="password",name='password',required='required').form-control#password
                  .form-group  
                    label 确认密码 
                    input(type="password",name='repassword',required='required').form-control#password
                  .row  
                    .col-md-6.col-md-offset-3
                        button.btn.btn-success.btn-block.text-center(type='submit')  注册
            
              