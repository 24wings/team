extends layouts/base-layout
block append style
    style.
      
block append content
    if user
      .jumbotron.text-center
        h2 欢迎来到作品上传空间,上传你的作品
        p: a.btn.btn-primary.btn-lg     
    else

    .container
        .row
            each work in works
                .col-xs-6.col-md-4
                    a.thunmbnail(href='#{work.banner.rootPath.substring(6)}index.html',target='_blank')
                        img(src="#{work.banner.url}")
                        .caption
                            h3  简介:   #{work.summary}
                            p   描述  #{work.detail}
                            p
                                a.btn.btn-primary.pull-left(href='#{work.banner.rootPath.substring(6)}index.html',target='_blank') 查看
                                a.btn.btn-danger.pull-right(onclick="deleteWork('#{work._id}')")  删除
            .col-xs-6.col-md-4
                a.thumbnail.add-btn(href='/works/addWork/#{user._id}')
                    img(src="data:image/png;base64,")
block append script
    script(src='/scripts/works.js')